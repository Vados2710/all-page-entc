(() => {
  const modal = document.getElementById("site-modal");
  modal.addEventListener("show.bs.modal", function (event) {
    let modalLink = event.relatedTarget;
    let modalTitle = this.querySelector(".modal-title");
    let modalBody = this.querySelector(".modal-body");
    modalTitle.innerText = modalLink.innerText;
    modalBody.innerText = "";
    fetch(modalLink.href)
      .then((respone) => respone.text())
      .then((html) => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, "text/html");
        const body = doc.querySelector(".legal__content");
        modalBody.appendChild(body);
      });
  });
  modal.addEventListener("shown.bs.modal", function (event) {
    const pageUrl = window.location.origin;
    if (this.querySelector("#pageUrl")) {
      this.querySelector("#pageUrl").innerText = pageUrl;
    }
  });
})();
